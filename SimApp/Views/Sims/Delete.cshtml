@model SimApp.Models.SimModel

@{
    ViewData["Title"] = "Eliminar Sim";
}

<h1>Eliminar Sim</h1>
<hr />
<div>
    
    <div class="alert alert-danger" role="alert">
        Vas a eliminar a <b>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</b>.
        ¿Deseas continuar? Esta acción no se puede revertir.
    </div>
    <form asp-action="Delete" class="mb-3">
        <input type="submit" value="Eliminar" class="btn btn-danger" />
    </form>
    <a asp-action="Index">Volver a la Lista</a>
    
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}